<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">






    <Button
            android:text="登陆"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button"/>
    <Button
            android:text="对象"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button2"/>
    <Button
            android:text="请求列表"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button3"/>
    <Button
            android:text="上传"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button4"/>
    <Button
            android:text="下载"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button5"/>

    <Button
            android:text="支付"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button6"/>

    <com.bsoft.libpay.widget.PayTypeLayout
            android:id="@id/paytype_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


<ImageView android:layout_width="wrap_content"
           android:layout_height="wrap_content"
android:id="@+id/iv"/>
    <TextView
            android:id="@+id/sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</LinearLayout>