<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="view_offset_behavior">
        <attr name="anchor_gravity" format="enum">
            <enum name="left" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
        </attr>
        <attr name="scroll_follow" format="boolean" />
        <attr name="anchor_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="view_anchor_behavior">
        <attr name="anchorId" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="view_zoom_behavior">
        <attr name="min_height" format="dimension"></attr>
        <attr name="scrolling_id" format="integer"></attr>
    </declare-styleable>


    <declare-styleable name="CircleNumberProgressBar">
        <attr name="circleprogress_reache_color" format="color"/>
        <attr name="circleprogress_reache_height" format="dimension"/>
        <attr name="circleprogress_unreache_color" format="color"/>
        <attr name="circleprogress_unreache__height" format="dimension"/>
        <attr name="circleprogress_text_color" format="color"/>
        <attr name="circleprogress_text_size" format="dimension"/>
        <attr name="circleprogress_radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="NumberProgressBar">
        <attr name="numprogress_reache_color" format="color"/>
        <attr name="numprogress_reache_height" format="dimension"/>
        <attr name="numprogress_unreache_color" format="color"/>
        <attr name="numprogress_unreache__height" format="dimension"/>
        <attr name="numprogress_text_color" format="color"/>
        <attr name="numprogress_text_size" format="dimension"/>
        <attr name="numprogress_offset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FolderTextView">
        <attr name="foldline" format="integer" />
    </declare-styleable>


    <declare-styleable name="TextBannerViewStyle">
        <attr name="setInterval" format="integer|reference"/>
        <attr name="setAnimDuration" format="integer|reference"/>
        <attr name="setTextSize" format="dimension|reference"/>
        <attr name="setTextColor" format="color|reference"/>
        <attr name="setSingleLine" format="boolean"/>

        <attr name="setFlags">
            <enum name="strike" value="0"/>
            <enum name="underline" value="1"/>
        </attr>
        <attr name="setGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="setDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
        <attr name="setTypeface">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="italic_bold" value="3"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="common_RatingBar">
        <attr name="starCount" format="integer" />
        <attr name="canEdit" format="boolean" />
        <attr name="widthAndHeight" format="dimension" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="countSelected" format="integer" />
        <attr name="stateResId" format="reference" />
        <attr name="differentSize" format="boolean" />
    </declare-styleable>

    <declare-styleable name="commonSwitchView">
        <attr name="switch_bg_color_close" format="color" />
        <attr name="switch_bg_color_open" format="color" />
        <attr name="switch_ball_color" format="color" />
    </declare-styleable>
</resources>
