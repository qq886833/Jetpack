<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="view_offset_behavior">
        <attr name="anchor_gravity" format="enum">
            <enum name="left" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="right" value="2"></enum>
            <enum name="bottom" value="3"></enum>
        </attr>
        <attr name="scroll_follow" format="boolean" />
        <attr name="anchor_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="view_anchor_behavior">
        <attr name="anchorId" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="view_zoom_behavior">
        <attr name="min_height" format="dimension"></attr>
        <attr name="scrolling_id" format="integer"></attr>
    </declare-styleable>


    <declare-styleable name="CircleNumberProgressBar">
        <attr name="circleprogress_reache_color" format="color"/>
        <attr name="circleprogress_reache_height" format="dimension"/>
        <attr name="circleprogress_unreache_color" format="color"/>
        <attr name="circleprogress_unreache__height" format="dimension"/>
        <attr name="circleprogress_text_color" format="color"/>
        <attr name="circleprogress_text_size" format="dimension"/>
        <attr name="circleprogress_radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="NumberProgressBar">
        <attr name="numprogress_reache_color" format="color"/>
        <attr name="numprogress_reache_height" format="dimension"/>
        <attr name="numprogress_unreache_color" format="color"/>
        <attr name="numprogress_unreache__height" format="dimension"/>
        <attr name="numprogress_text_color" format="color"/>
        <attr name="numprogress_text_size" format="dimension"/>
        <attr name="numprogress_offset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FolderTextView">
        <attr name="foldline" format="integer" />
    </declare-styleable>


    <declare-styleable name="TextBannerViewStyle">
        <attr name="setInterval" format="integer|reference"/>
        <attr name="setAnimDuration" format="integer|reference"/>
        <attr name="setTextSize" format="dimension|reference"/>
        <attr name="setTextColor" format="color|reference"/>
        <attr name="setSingleLine" format="boolean"/>

        <attr name="setFlags">
            <enum name="strike" value="0"/>
            <enum name="underline" value="1"/>
        </attr>
        <attr name="setGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="setDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
        <attr name="setTypeface">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="italic_bold" value="3"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="common_RatingBar">
        <attr name="starCount" format="integer" />
        <attr name="canEdit" format="boolean" />
        <attr name="widthAndHeight" format="dimension" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="countSelected" format="integer" />
        <attr name="stateResId" format="reference" />
        <attr name="differentSize" format="boolean" />
    </declare-styleable>

    <declare-styleable name="commonSwitchView">
        <attr name="switch_bg_color_close" format="color" />
        <attr name="switch_bg_color_open" format="color" />
        <attr name="switch_ball_color" format="color" />
    </declare-styleable>


    <!--自由设置drawable距离的TextView-->
    <declare-styleable name="DrawableTextView">
        <attr name="leftDrawable" format="reference|color" />
        <attr name="rightDrawable" format="reference|color" />
        <attr name="topDrawable" format="reference|color" />
        <attr name="bottomDrawable" format="reference|color" />

        <attr name="leftDrawableWidth" format="reference|dimension" />
        <attr name="rightDrawableWidth" format="reference|dimension" />
        <attr name="topDrawableWidth" format="reference|dimension" />
        <attr name="bottomDrawableWidth" format="reference|dimension" />

        <attr name="leftDrawableHeight" format="reference|dimension" />
        <attr name="rightDrawableHeight" format="reference|dimension" />
        <attr name="topDrawableHeight" format="reference|dimension" />
        <attr name="bottomDrawableHeight" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <!--观察者按钮-->
    <declare-styleable name="ObserverButton">
        <!--默认背景-->
        <attr name="defaultBgColor" format="color|reference" />
        <attr name="defaultBgResource" format="color|reference" />
        <!--可以点击的背景-->
        <attr name="pressBgColor" format="color|reference" />
        <attr name="pressBgResource" format="color|reference" />
        <!--默认字体颜色-->
        <attr name="defaultTextColor" format="color" />
        <!--可以点击的字体颜色-->
        <attr name="pressTextColor" format="color" />
    </declare-styleable>

    <!-- 模仿菜单选择栏 -->
    <declare-styleable name="LSettingView">
        <attr name="leftText" format="string"/>
        <attr name="leftIcon" format="integer"/>
        <attr name="rightIcon" format="integer"/>
        <attr name="LtextSize" format="float"/>
        <attr name="LtextColor" format="color"/>
        <attr name="isShowUnderLine" format="boolean"/>
        <attr name="leftIconSize" format="dimension"/>
        <attr name="leftTextMarginLeft" format="dimension"/>
        <attr name="rightStyle" format="enum">
            <enum name="iconShow" value="0"/>
            <enum name="iconHide" value="1"/>
            <enum name="iconCheck" value="2"/>
            <enum name="iconSwitch" value="3"/>
        </attr>
        <attr name="isShowRightText" format="boolean"/>
        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="float"/>
        <attr name="rightTextColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="LEditTextItemView">
        <attr name="title_left" format="string"/>
        <attr name="title_right" format="string"/>
        <attr name="title_right_hint" format="boolean" />
        <attr name="title_left_color" format="color"/>
        <attr name="title_right_color" format="color"/>
        <attr name="img_left_src" format="reference"/>
        <attr name="img_right_src" format="reference"/>

        <attr name="imgLpadding" format="dimension"/>
        <attr name="imgRpadding" format="dimension"/>

        <attr name="tvLpaddingTop" format="dimension"/>
        <attr name="tvLpaddingBottom" format="dimension"/>

        <attr name="imgLmargin" format="dimension"/>
        <attr name="imgRmargin" format="dimension"/>

        <attr name="leftTvSize" format="dimension"/>
        <attr name="rightTvSize" format="dimension"/>
    </declare-styleable>


</resources>
